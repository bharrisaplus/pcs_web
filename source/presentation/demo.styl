html
  height: 100%
  width: 100%

body
  height: calc(100% - 16px)
  width: calc(100% - 16px)

.pcs-container
  height: 100%
  width: 100%

  & .title-marqee
    height: 10%
    width: 100%
    
    & h2
      margin: 0
    
  & .closeup
    height: 85%
    width: 100%

.closeup
  & .pad
    display: flex
    height: 100%
    flex-flow: row wrap
    justify-content: space-evenly
    padding: 0
    list-style: none
    width: 100%
  
    & li
      height: fit-content
      span
        font-size: 108px

.turntable-container
  &::backdrop
    background-color: rgba(51,51,51, 0.75)

.turntable
  display: flex
  flex-flow: column wrap
  height: fit-content
  padding: 0px 27px 27px
  justify-content: center
  width: fit-content

  &-pickup
    font-size: 216px
  
  &-close
    width: 25%
    align-self: flex-end
    margin-right: -25px
  
  &-cue-lever
    width: 100%
    display: flex
    flex-flow: row nowrap
    justify-content: space-around

    & button
      width: 25%
