// colors
$card-table-green = #1c5e3d
$card-table-red = #6B0D16
$card-table-blue = #0C2D5F
$card-table-purple = #4B2262
$card-stock = #F7F7F7
$spade-fam = #191970 // midnightblue
$diamond-fam = #b22222 // firebrick
$club-fam = #808000 // olive
$heart-fam = #ff8c00 // darkorange
$pcs-black = #333

// spacing and layout
card-row-gap()
    calc(100% / 7.5) // for 4 row

card-col-gap()
    calc(100% / 26.5) // for 13 col


:root
    --spade-splash: $spade-fam
    --diamond-splash: $diamond-fam
    --club-splash: $club-fam
    --heart-splash: $heart-fam
    --turntable-curtain: rgba($pcs-black, 0.75)
    --turntable-curtain-blend: rgba($pcs-black, 0.375)
    --card-base: $card-stock
    --bg-emerald: $card-table-green
    --bg-cherry: $card-table-red
    --bg-twilight: $card-table-blue
    --bg-amethyst: $card-table-purple

html
    height: 100%
    width: 100%

body
    height: calc(100% - 16px)
    width: calc(100% - 16px)
    margin: 8px

.pcs-container
    height: 100%
    width: 100%

    & .title-marqee
        display: flex
        height: 10%
        width: 100%
        flex-flow row nowrap
        justify-content: space-between
        align-items: center
        
        & h2
            margin: 0
            font-size: 24px
            font-weight: bold
            line-height: normal
        
        & .ribbon
            display: flex
            margin-right: 18px
            flex-flow: row nowrap
            column-gap: 4.5px

            & .export-zone
                display: inline-flex
                width: 126px
                border-width: 1px
                border-style: dashed
                border-radius: 18px
                text-decoration: none
                justify-content: center
                align-items: center


    & .closeup
        height: 87%
        width: 100%
        overflow-y: scroll

.closeup
    & .pad
        display: flex
        height: calc(100% - 18px)
        width: calc(100% - 18px)
        padding: 9px
        margin: 0
        font-size: 108px
        background-color: inherit
        list-style: none
        flex-flow: row wrap
        justify-content: space-evenly
        gap: card-row-gap() card-col-gap()

        &:has(+ :popover-open)
            pointer-events: none

        & li
            cursor: pointer

.turntable-container
    margin: auto
    border: 3.5px
    border-radius: 4.5%
    padding: 4.5px
    background-color: inherit
    border-color: var(--turntable-curtain-blend)

    &::backdrop
        background-color: var(--turntable-curtain)
        backdrop-filter: blur(3px)

.turntable
    display: flex
    height: fit-content
    width: fit-content
    padding: 0px 27px 27px
    background-color: inherit
    flex-flow: column wrap
    justify-content: center
    gap: 18px

    & &-pickup
        padding-top: 9px
        font-size: 216px
        cursor: default
        user-select: none

    & &-close
        width: 25%
        margin-right: -25px
        margin-bottom: 9px
        color: var(--card-base)
        background-color: transparent
        border-color: transparent
        align-self: flex-end

        &:hover
            border-color: var(--diamond-splash)

    & &-cue-lever
        display: flex
        width: 100%
        margin-top: 9px
        flex-flow: row nowrap
        justify-content: space-around

        & button
            display: flex
            width: 25%
            justify-content: center
            align-items: center

    & button
        cursor: pointer

.spade
    color: var(--spade-splash)
.diamond
    color: var(--diamond-splash)
.club
    color: var(--club-splash)
.heart
    color: var(--heart-splash)

.playing-card
    display: inline-flex
    height: fit-content
    aspect-ratio: 5/7
    border-radius: 4.5%
    padding: 4.5px 1.125px 2.25px
    line-height: 0
    background-color: var(--card-base)
    border-color: transparent
    justify-content: center
    align-items: center

.green-dye
    background-color: var(--bg-emerald)

.red-dye
    background-color: var(--bg-cherry)

.blue-dye
    background-color: var(--bg-twilight)

.purple-dye
    background-color: var(--bg-amethyst)
